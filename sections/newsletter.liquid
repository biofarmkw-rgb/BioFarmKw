{{ 'section-newsletter.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

{%- if section.settings.side_image != blank -%}
  {% capture side_image %}
      {% render 'lazy-image',
        image_object: section.settings.side_image,
        sizes: '(min-width: 750px) 50vw, 100vw',
        class: 'newsletter-image'
      %}
  {% endcapture %}
{%- endif -%}

<div class="section-newsletter isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin">
  {%- if section.settings.background_image or section.settings.background_image_mobile -%}
    <div
      class="background-image{% if section.settings.image_behavior != 'none' %} image--has-behavior behavior--{{ section.settings.image_behavior }}{% if section.settings.image_behavior == 'zoom-in' or section.settings.image_behavior == 'parallax' %} scroll-synergy{% endif %}{% endif %}"
      style="opacity: {{ section.settings.background_image_opacity }}%;"
    >
      {% render 'lazy-image',
        has_mobile: section.settings.background_image_mobile,
        image_object: section.settings.background_image
      %}
      {% render 'lazy-image', is_mobile: true, image_object: section.settings.background_image_mobile %}
    </div>
  {%- endif -%}
  <div class="section__wrapper newsletter__wrapper image-width--{{ section.settings.side_image_width | default: 'small' }}">
    {%- if side_image != blank and section.settings.side_image_position == 'left' -%}
      {{ side_image }}
    {%- endif -%}
    <div class="newsletter-main section-{{ section.id }}-padding">
      <div class="content-group width--{{ section.settings.content_width }} text-align--{{ section.settings.text_alignment }} text-align-mobile--{{ section.settings.text_alignment_mobile }}">
        {% content_for 'blocks' %}
      </div>
    </div>
    {%- if side_image != blank and section.settings.side_image_position == 'right' -%}
      {{ side_image }}
    {%- endif -%}
  </div>

  {% render 'section-id-tip', section_id: section.id %}
</div>
