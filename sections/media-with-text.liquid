{{ 'section-media-with-text.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="media-with-text isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin">
  {%- if section.settings.background_image or section.settings.background_image_mobile -%}
    <div
      class="background-image{% if section.settings.image_behavior != 'none' %} image--has-behavior behavior--{{ section.settings.image_behavior }}{% if section.settings.image_behavior == 'zoom-in' or section.settings.image_behavior == 'parallax' %} scroll-synergy{% endif %}{% endif %}"
      style="opacity: {{ section.settings.background_image_opacity }}%;"
    >
      {% render 'lazy-image',
        has_mobile: section.settings.background_image_mobile,
        image_object: section.settings.background_image
      %}
      {% render 'lazy-image', is_mobile: true, image_object: section.settings.background_image_mobile %}
    </div>
  {%- endif -%}
  <div class="section__wrapper media-with-text__wrapper image-width--{{ section.settings.image_width }} image-position--{{ section.settings.image_position }} image-position-mobile--{{ section.settings.image_position_mobile }}{% unless section.settings.enable_full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    <div class="media-item video-position--{{ section.settings.video_position }}">
      {% content_for 'block', type: '_image', id: 'image' %}
      <div class="video-wrapper{% if section.settings.enable_parallax %} scroll-synergy behavior--parallax{% endif %}">
        {% content_for 'block', type: '_video', id: 'video' %}
      </div>
    </div>
    {% content_for 'block', type: '_rich-text', id: 'rich-text' %}
  </div>

  {% render 'section-id-tip', section_id: section.id %}
</div>
