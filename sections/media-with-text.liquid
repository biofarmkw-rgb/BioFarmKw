  "blocks": [
    {
      "type": "_rich-text"
    }
  ],
  "presets": [
    {
      "name": "t:sections.media-with-text.presets.name",
      "category": "t:sections.all.categories.media_layout",
      "blocks": [
        {
          "type": "_rich-text",
          "static": true,
          "id": "rich-text",
          "blocks": [
