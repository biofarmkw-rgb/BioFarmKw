      "options": [
        {
          "value": "left",
          "label": "t:sections.all.image.image_position.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.all.image.image_position.options__2.label"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "video_position",
      "label": "t:sections.all.video.video_position.label",
      "options": [
        {
          "value": "top-left",
          "label": "t:sections.all.video.video_position.options__1.label"
