{{ 'section-feature-highlights.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      .section-{{ section.id }}-margin {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
      }
  }
{%- endstyle -%}
{% assign slide_interval = section.settings.change_slides_speed | times: 1000.00 %}
<div class="section-highlights isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin">
  <feature-highlights class="section__wrapper highlight__wrapper page-width image-width--{{ section.settings.image_width }} image-position--{{ section.settings.image_position }} section-{{ section.id }}-padding">
    <div
      class="highlight-image media media--{{ section.settings.image_ratio }}"
      {% if section.settings.image_ratio == 'adapt' %}
        {% liquid
          assign ratio = section.settings.image.aspect_ratio | default: 1
          assign height = 1 | divided_by: ratio | times: 100 | append: '%'
        %}
        style="--ratio-percent: {{ height }};"
      {% endif %}
    >
      {% render 'lazy-image', image_object: section.settings.image, placeholder: 'lifestyle-1' %}
      <div class="media-content">
        {%- for block in section.blocks -%}
          <button
            class="spot-button button button--icon button--pill button--float"
            aria-haspopup="true"
            aria-label="{{ 'general.view_details' | t }}"
            aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="Slide-{{ section.id }}-{{ block.id }}"
            style="left: {{ block.settings.horizontal_position }}%; top: {{ block.settings.vertical_position }}%;"
          ></button>
        {%- endfor -%}
      </div>
    </div>
    <slider-component
      class="highlight-slider slider"
      data-slide-desktop
      data-slide-mobile
      data-slide-smooth
      data-draggable
      {% if section.settings.auto_rotate %}
        data-autoplay
        data-interval="{{ slide_interval }}"
      {% endif %}
    >
      <div class="slider-container">
        <ul
          id="Slider-{{ section.id }}"
          class="slider-wrapper"
        >
          {%- for block in section.blocks -%}
            <li
              id="Slide-{{ section.id }}-{{ block.id }}"
              class="slider-slide"
              {{ block.shopify_attributes }}
            >
              <div class="highlight-content content-group width--medium group--{{ block.settings.text_alignment }} text-align--{{ block.settings.text_alignment }}">
                {%- if block.settings.subheading != blank -%}
                  <div class="text-content-subheading caption">{{ block.settings.subheading | escape }}</div>
                {%- endif -%}
                {%- if block.settings.heading != blank -%}
                  <div class="text-content-heading heading-block heading-size--{{ block.settings.heading_size }} font-heading">
                    {{ block.settings.heading | escape }}
                  </div>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <div class="text-content-description rte">{{ block.settings.description }}</div>
                {%- endif -%}
                {%- if block.settings.button_label != blank -%}
                  <a
                    class="button button--small"
                    {% if block.settings.button_link != blank %}
                      href="{{ block.settings.button_link }}"
                      {% if block.settings.open_in_new_tab %}
                        target="_blank"
                        rel="noopener nofollow"
                      {% endif %}
                    {% else %}
                      role="link"
                      aria-disabled="true"
                    {% endif %}
                  >
                    {{ block.settings.button_label | escape }}
                    {%- if block.settings.show_arrow -%}
                      {% render 'icon-sets-basic', icon: 'right', class: 'caret-icon' %}
                    {%- endif -%}
                  </a>
                {%- endif -%}
              </div>
            </li>
          {%- endfor -%}
        </ul>
      </div>
      {% render 'slider-page-dots',
        section_id: section.id,
        is_small: true,
        auto_rotate: section.settings.auto_rotate,
        slide_interval: slide_interval
      %}
    </slider-component>
  </feature-highlights>

  {% render 'section-id-tip', section_id: section.id %}
</div>
<script src="{{ 'feature-highlights.js' | asset_url }}" defer></script>
{% schema %}
