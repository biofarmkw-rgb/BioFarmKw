      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom.label",
      "default": 88
    }
  ],
  "blocks": [
    {
      "type": "highlight",
      "name": "t:sections.feature-highlights.blocks.highlight.name",
      "settings": [
        {
          "type": "range",
          "id": "horizontal_position",
          "label": "t:sections.all.hotspot.horizontal_position.label",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "default": 40
        },
        {
          "type": "range",
          "id": "vertical_position",
          "label": "t:sections.all.hotspot.vertical_position.label",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "default": 20
        },
        {
          "type": "header",
          "content": "t:sections.all.content.header_content"
        },
        {
          "type": "text_alignment",
          "id": "text_alignment",
          "label": "t:sections.all.text-alignment.label",
          "default": "center"
        },
