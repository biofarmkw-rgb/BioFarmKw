{{ 'section-login-register.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="main-login isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin">
  <div class="section__wrapper main-login__wrapper login-register__wrapper page-width section-{{ section.id }}-padding">
    <div class="main-content">
      <div id="recover" class="recover-wrapper content-wrapper">
        <div class="content-title content-group">
          <h1 class="content-heading text-content-heading h0">{{ 'customer.recover_password.title' | t }}</h1>
          <div class="content-description text-content-description light">
            {{ 'customer.recover_password.subtext' | t }}
          </div>
        </div>

        {%- form 'recover_customer_password' -%}
          {%- if form.errors -%}
            <div class="alert-message alert-error mb-2" role="alert" autofocus tabindex="-1">
              <ul class="message-list">
                {%- for field in form.errors -%}
                  <li id="Recover-Form-{{ field | capitalize }}-Error">
                    {{ form.errors.messages[field] | join: '; ' }}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}
          {% assign recover_success = form.posted_successfully? %}
          <div class="form-fields">
            <div class="field{% if form.errors contains 'email' %} field-error{% endif %}">
              <input
                id="Recover-Form-Email"
                class="field-input"
                type="email"
                value=""
                name="email"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                pattern=".+@.+\.[a-zA-Z]{2,}$"
                title="{{ 'newsletter.valid_email' | t }}"
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="Recover-Form-Email-Error"
                  autofocus
                {% endif %}
                placeholder="{{ 'customer.login_page.email' | t }}"
              >
              <label for="Recover-Form-Email" class="field-label">
                {{ 'customer.login_page.email' | t }}
              </label>
            </div>
          </div>

          <div class="button-group">
            <button class="submit-button button button--full">
              {{ 'customer.login_page.submit' | t }}
            </button>
            <a href="#login" class="cancel-button button button--full button--border">
              {{- 'general.cancel' | t -}}
            </a>
          </div>
        {%- endform -%}
      </div>
      <div id="login" class="login-wrapper content-wrapper">
        <div class="content-title content-group">
          <h1 class="content-heading text-content-heading h0">{{ 'customer.login_page.title' | t }}</h1>
          <div class="content-description text-content-description light">
            {{ 'customer.login_page.subtext' | t }}
          </div>
        </div>

        {%- if recover_success -%}
          <div
            class="login-recover-message alert-message alert-success mb-2"
            tabindex="-1"
            aria-live="assertive"
            autofocus
          >
            {{ 'customer.recover_password.success' | t }}
          </div>
        {%- endif -%}
        {%- form 'customer_login', novalidate: 'novalidate' -%}
          {%- if form.errors -%}
            <div class="alert-message alert-error mb-2" role="alert" tabindex="-1">
              <ul class="message-list">
                {%- for field in form.errors -%}
                  <li id="Login-Form-{{ field | capitalize }}-Error">
                    {{ form.errors.messages[field] | join: '; ' }}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

          <div class="form-fields">
            <div class="field{% if form.errors contains 'email' %} field-error{% endif %}">
              <input
                id="Login-Form-Email"
                class="field-input"
                type="email"
                name="customer[email]"
                autocomplete="email"
                autocorrect="off"
                autocapitalize="off"
                pattern=".+@.+\.[a-zA-Z]{2,}$"
                title="{{ 'newsletter.valid_email' | t }}"
                {% if form.errors contains 'email' %}
                  aria-describedby="LoginForm-Email-Error"
                  aria-invalid="true"
                {% endif %}
                required
                placeholder="{{ 'customer.login_page.email' | t }}"
              >
              <label for="Login-Form-Email" class="field-label">
                {{ 'customer.login_page.email' | t }}
              </label>
            </div>

            {%- if form.password_needed -%}
              <div class="field{% if form.errors contains 'password' %} field-error{% endif %}">
                <input
                  id="Login-Form-Password"
                  class="field-input"
                  type="password"
                  value=""
                  name="customer[password]"
                  autocomplete="current-password"
                  {% if form.errors contains 'password' %}
                    aria-describedby="Login-Form-Password-Error"
                    aria-invalid="true"
                  {% endif %}
                  required
                  aria-required="true"
                  placeholder="{{ 'customer.login_page.password' | t }}"
                >
                <label for="Login-Form-Password" class="field-label">
                  {{ 'customer.login_page.password' | t }}
                </label>
              </div>
            {%- endif -%}

            <a href="#recover" class="forget-password-notice link link-text show-underline light">
              {{ 'customer.login_page.forgot_password' | t }}
            </a>
          </div>

          <div class="button-group">
            <button type="submit" class="login-button button">
              {{ 'customer.login_page.sign_in' | t }}
            </button>
            <a href="{{ routes.account_register_url }}" class="register-button button button--border">
              {{ 'customer.register.title' | t }}
            </a>
          </div>
        {%- endform -%}

        {%- if shop.checkout.guest_login -%}
          {%- form 'guest_login' -%}
            <button class="button button--full button--border">
              {{ 'customer.login_page.guest_title' | t }}
            </button>
          {%- endform -%}
        {%- endif -%}

        {%- if section.settings.enable_shop_login_button
          and shop.features.login_with_shop_classic_customer_accounts?
        -%}
          <hr>
          <div class="other-login">
            <span class="light">{{ 'customer.login_page.alternate_provider_separator' | t }}</span>
            {{ shop | login_button }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_shop_login_button",
      "label": "t:sections.main-login.settings.shop_login_button.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.header_content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top.label",
      "default": 140
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom.label",
      "default": 140
    },
    {
      "type": "header",
      "content": "t:sections.all.margin.header_content"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom.label",
      "default": 88
    }
  ]
}
{% endschema %}
