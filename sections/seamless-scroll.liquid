{{ 'section-seamless-scroll.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }

      .section-{{ section.id }}-margin {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
      }
  }
{%- endstyle -%}
<div
  class="seamless-scroll isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin"
>
  <scroll-seamless
    class="section__wrapper seamless-scroll__wrapper overflow-hidden section-{{ section.id }}-padding{% if section.settings.display_border_blur %} border-gradient-alpha{% endif %}"
    data-direction="{{ section.settings.direction }}"
    data-speed="{{ section.settings.speed }}"
    role="marquee"
    aria-label="scrolling marquee"
  >
    <div class="scroll-container{% if section.settings.enable_scroll_synergy %} scroll-synergy behavior--crab-{{ section.settings.direction }}{% endif %}">
      <div
        class="scroll-list"
        style="--item-gap: {{ section.settings.gap }}px; --item-gap-mobile: {{ section.settings.gap | times: 0.75 | round: 0 }}px;"
      >
        {%- for block in section.blocks -%}
          <div class="scroll-item" {{ block.shopify_attributes }}>
            {%- if block.type == 'text' -%}
              <div
                class="scroll-item-text{% if block.settings.font_decorative %} font-decorative{% endif %}{% if block.settings.font_hollow %} font-hollow{% endif %}"
                style="--font-size: {{ block.settings.font_size }}px; --font-size-mobile: {{ block.settings.font_size | times: 0.75 | round: 0 }}px; font-weight: {{ block.settings.font_weight }};{% if block.settings.enable_custom_color %} color: {{ block.settings.custom_color }};{% endif %}"
              >
                {{ block.settings.content }}
              </div>
            {%- elsif block.type == 'icon' -%}
              <div
                class="scroll-item-icon"
                style="--icon-size: {{ block.settings.icon_size }}px; --icon-size-mobile: {{ block.settings.icon_size | times: 0.75 | round: 0 }}px;{% if block.settings.enable_custom_color %} color: {{ block.settings.custom_color }};{% endif %}"
              >
                {% render 'icon-sets', icon: block.settings.icon %}
                <span class="visually-hidden">{{ 'general.icon.description' | t: icon: block.settings.icon }}</span>
              </div>
            {%- elsif block.type == 'spacer' -%}
              <div
                class="scroll-item-spacer"
                style="--width: {{ block.settings.width }}px; --width-mobile: {{ block.settings.width | times: 0.75 | round: 0 }}px;"
              ></div>
            {%- else -%}
              <div
                class="scroll-item-image media media--square"
                style="--image-width: {{ block.settings.image_width }}px; --image-width-mobile: {{ block.settings.image_width | times: 0.75 | round: 0 }}px; --image-rotate: {{ block.settings.image_rotate }}deg;"
              >
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 200 | image_tag: loading: 'lazy' }}
                {%- else -%}
                  {{ 'product-2' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </scroll-seamless>
</div>
<script src="{{ "seamless-scroll.js" | asset_url }}" defer></script>

