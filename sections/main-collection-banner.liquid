{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
{% liquid
  if section.settings.show_collection_image
    assign collection_image = collection.image | default: section.settings.default_collection_image
  elsif section.settings.custom_collection_image != blank
    assign collection_image = section.settings.custom_collection_image
  endif

  assign enable_transparent_header_collections = false
  if settings.enable_transparent_header_collections
    assign collection_templates = settings.transparent_collections_templates | replace: ' ', '' | replace: 'ï¼Œ', ',' | split: ','
    assign template_suffix = template.suffix

    if collection_templates != empty
      if collection_templates contains template_suffix and template_suffix != blank
        assign enable_transparent_header_collections = true
      elsif collection_templates contains 'default' and template_suffix == blank
        assign enable_transparent_header_collections = true
      endif
    else
      assign enable_transparent_header_collections = true
    endif
  endif
%}
<div class="main-collection-banner{% unless section.settings.enable_full_width %} page-width{% endunless %} section-{{ section.id }}-margin">
  <div class="section__wrapper main-collection-banner__wrapper isolate color-{{ section.settings.color_scheme }} gradient">
    {%- if collection_image != null -%}
      <div
        class="background-image{% if section.settings.image_behavior != 'none' %} image--has-behavior behavior--{{ section.settings.image_behavior }}{% if section.settings.image_behavior == 'zoom-in' or section.settings.image_behavior == 'parallax' %} scroll-synergy{% endif %}{% endif %}"
        style="opacity: {{ section.settings.background_image_opacity }}%;"
      >
        {% render 'lazy-image', image_object: collection_image, preload: section.settings.if_as_main_area %}
      </div>
    {%- endif -%}
    <div class="page-content-wrapper{% if enable_transparent_header_collections %} adapt-transparent-header{% endif %} height--{{ section.settings.height }} position-container position--{{ section.settings.content_position }}{% if section.settings.enable_full_width %} page-width{% else %} ps-4 pe-4{% endif %}">
      <div class="content-group width--{{ section.settings.content_width }} text-align--{{ section.settings.text_alignment }} text-align-mobile--{{ section.settings.text_alignment_mobile }}">
        {% content_for 'blocks' %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_full_width",
      "label": "t:sections.all.layout.enable_full_width.label",
      "default": true
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "small",
          "label": "t:sections.all.height.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.all.height.options__3.label"
        },
        {
          "value": "large",
          "label": "t:sections.all.height.options__4.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.all.height.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.image.header_background_image"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "default_collection_image",
      "label": "t:sections.main-collection-banner.settings.default_collection_image.label",
      "info": "t:sections.main-collection-banner.settings.default_collection_image.info",
      "visible_if": "{{ section.settings.show_collection_image }}"
    },
    {
      "type": "image_picker",
      "id": "custom_collection_image",
      "label": "t:sections.main-collection-banner.settings.custom_collection_image.label",
      "info": "t:sections.main-collection-banner.settings.custom_collection_image.info",
      "visible_if": "{{ section.settings.show_collection_image == false }}"
    },
    {
      "type": "range",
      "id": "background_image_opacity",
      "label": "t:sections.all.image.image_opacity.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 90
    },
    {
      "type": "select",
      "id": "image_behavior",
      "label": "t:sections.all.animation.image_behavior.label",
      "options": [
        {
          "value": "none",
          "label": "t:sections.all.animation.image_behavior.options__1.label"
        },
        {
          "value": "fixed",
          "label": "t:sections.all.animation.image_behavior.options__3.label"
        },
        {
          "value": "zoom-in",
          "label": "t:sections.all.animation.image_behavior.options__4.label"
        },
        {
          "value": "parallax",
          "label": "t:sections.all.animation.image_behavior.options__5.label"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "t:sections.all.content.header_content"
    },
    {
      "type": "select",
      "id": "content_position",
      "options": [
        {
          "value": "middle-left",
          "label": "t:sections.all.position.options__4.label"
        },
        {
          "value": "middle-center",
          "label": "t:sections.all.position.options__5.label"
        },
        {
          "value": "middle-right",
          "label": "t:sections.all.position.options__6.label"
        }
      ],
      "default": "middle-center",
      "label": "t:sections.all.position.label",
      "info": "t:sections.all.desktop.effect.info"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "t:sections.all.content.content_width.label",
      "info": "t:sections.all.desktop.effect.info",
      "options": [
        {
          "value": "small",
          "label": "t:sections.all.content.content_width.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.all.content.content_width.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.all.content.content_width.options__3.label"
        },
        {
          "value": "full",
          "label": "t:sections.all.content.content_width.options__4.label"
        }
      ],
      "default": "medium"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "t:sections.all.text-alignment.label",
      "default": "center"
    },
    {
      "type": "header",
      "content": "t:sections.all.mobile.header_content"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment_mobile",
      "label": "t:sections.all.text-alignment.label",
      "default": "center"
    },
    {
      "type": "header",
      "content": "t:sections.all.seo.header_content"
    },
    {
      "type": "checkbox",
      "id": "if_as_main_area",
      "label": "t:sections.all.seo.if_as_main_area.label",
      "default": true,
      "info": "t:sections.all.seo.if_as_main_area.info"
    },
    {
      "type": "header",
      "content": "t:sections.all.margin.header_content"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom.label",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "_collection-title"
    },
    {
      "type": "_collection-description"
    },
    {
      "type": "_collection-subcollections"
    },
    {
      "type": "@theme"
    }
  ]
}
{% endschema %}
