{{ 'section-collage-with-text.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="collage-with-text isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin">
  <div class="section__wrapper collage-with-text__wrapper image-width--{{ section.settings.image_width }} image-position--{{ section.settings.image_position }} image-position-mobile--{{ section.settings.image_position_mobile }} page-width section-{{ section.id }}-padding">
    {% content_for 'block', type: '_images', id: 'images' %}
    {% content_for 'block', type: '_rich-text', id: 'rich-text' %}
  </div>

  {% render 'section-id-tip', section_id: section.id %}
</div>
{% schema %}
{
  "name": "t:sections.collage-with-text.name",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.drawer", "custom.popup"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.content.header_content"
    },
    {
      "type": "select",
      "id": "image_width",
      "label": "t:sections.all.image.image_width.label",
      "info": "t:sections.all.desktop.effect.info",
      "options": [
        {
          "value": "small",
          "label": "t:sections.all.image.image_width.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.all.image.image_width.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.all.image.image_width.options__3.label"
        }
      ],
      "default": "small"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "t:sections.all.image.image_position.label",
      "info": "t:sections.all.desktop.effect.info",
      "options": [
        {
          "value": "left",
          "label": "t:sections.all.image.image_position.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.all.image.image_position.options__2.label"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:sections.all.mobile.header_content"
    },
    {
      "type": "select",
      "id": "image_position_mobile",
      "label": "t:sections.all.image.image_position.label",
      "options": [
        {
          "value": "top",
          "label": "t:sections.all.image.image_position.options__3.label"
        },
        {
          "value": "bottom",
          "label": "t:sections.all.image.image_position.options__4.label"
        }
      ],
      "default": "top"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.header_content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom.label",
      "default": 36
    },
    {
      "type": "header",
      "content": "t:sections.all.margin.header_content"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom.label",
      "default": 88
    }
  ],
  "blocks": [
    {
      "type": "_images"
    },
    {
      "type": "_rich-text"
    }
  ],
  "presets": [
    {
      "name": "t:sections.collage-with-text.presets.name",
      "category": "t:sections.all.categories.media_layout",
      "blocks": [
        {
          "type": "_images",
          "static": true,
          "id": "images",
          "blocks": [
            {
              "type": "_image",
              "settings": {
                "image_ratio": "square"
              }
            },
            {
              "type": "_image",
              "settings": {
                "image_ratio": "portrait"
              }
            },
            {
              "type": "_image",
              "settings": {
                "image_ratio": "landscape"
              }
            }
          ]
        },
        {
          "type": "_rich-text",
          "static": true,
          "id": "rich-text",
          "blocks": [
            {
              "type": "heading"
            },
            {
              "type": "description"
            },
            {
              "type": "buttons",
              "blocks": [
                {
                  "type": "button"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
