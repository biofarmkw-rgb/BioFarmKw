                "uppercase": true
              }
            },
            {
              "type": "description"
            }
          ]
        },
        {
          "type": "_event-list",
          "static": true,
          "id": "event-list",
          "blocks": [
            {
              "type": "_event",
              "blocks": [
                {
                  "type": "subheading",
                  "settings": {
                    "content": "2022"
                  }
                },
                {
