{{ 'section-press.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      .section-{{ section.id }}-margin {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
      }
  }
{%- endstyle -%}
<div class="section-press isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin">
  {%- if section.settings.background_image or section.settings.background_image_mobile -%}
    <div
      class="background-image{% if section.settings.image_behavior != 'none' %} image--has-behavior behavior--{{ section.settings.image_behavior }}{% if section.settings.image_behavior == 'zoom-in' or section.settings.image_behavior == 'parallax' %} scroll-synergy{% endif %}{% endif %}"
      style="opacity: {{ section.settings.background_image_opacity }}%;"
    >
      {% render 'lazy-image',
        has_mobile: section.settings.background_image_mobile,
        image_object: section.settings.background_image
      %}
      {% render 'lazy-image', is_mobile: true, image_object: section.settings.background_image_mobile %}
    </div>
  {%- endif -%}
  <div class="section__wrapper section-press__wrapper page-width width--narrow section-{{ section.id }}-padding">
    {%- if section.settings.show_heading -%}
      <div class="section-header-block content-group group--center width--medium">
        {% if section.settings.heading != blank %}
          <h2 class="heading-block heading-size--{{ section.settings.heading_size }}{% if section.settings.heading_uppercase %} uppercase{% endif %}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="description-block rte">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <tab-panel
      class="tab-panel"
      {% if section.settings.enable_auto_switch %}
        data-auto-switch
        data-interval="{{ section.settings.switch_interval | times: 1000 }}"
      {% endif %}
    >
      <scrollable-content-viewer class="tabs-wrapper scrollable-content" data-draggable>
        <ul
          class="tab-panel-tabs scrollable-content-wrapper tabs-alignment--center list-unstyled"
          role="tablist"
        >
          {%- for block in section.blocks -%}
            <li
              id="Press-Tab-{{ section.id }}-{{ forloop.index }}"
              class="tab scrollable-content-item focus-inset"
              role="tab"
              tabindex="0"
              aria-controls="Press-Panel-{{ section.id }}-{{ forloop.index }}"
              style="--image-width: {{ block.settings.image_width }}px; --image-width-mobile: {{ block.settings.image_width | times: 0.75 | round: 0 }}px;"
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 300 | image_tag }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      </scrollable-content-viewer>
      <div class="tab-panel-panels">
        {%- for block in section.blocks -%}
          <div
            id="Press-Panel-{{ section.id }}-{{ forloop.index }}"
            class="panel"
            role="tabpanel"
            {% unless forloop.first %}
              aria-hidden="true"
            {% endunless %}
            aria-labelledby="Press-Tab-{{ section.id }}-{{ forloop.index }}"
          >
            {{ block.settings.content }}
          </div>
        {%- endfor -%}
      </div>
    </tab-panel>
  </div>

  {% render 'section-id-tip', section_id: section.id %}
</div>
{% schema %}
{
  "name": "t:sections.press.name",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.drawer", "custom.popup"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.scheme.label",
      "default": "scheme-2"
    },
    {
      "type": "header",
      "content": "t:sections.all.image.background_image_picker.label"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.all.image.background_image_picker.label"
    },
    {
      "type": "range",
      "id": "background_image_opacity",
      "label": "t:sections.all.image.image_opacity.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 90
    },
    {
      "type": "select",
      "id": "image_behavior",
      "label": "t:sections.all.animation.image_behavior.label",
      "options": [
        {
          "value": "none",
          "label": "t:sections.all.animation.image_behavior.options__1.label"
        },
        {
          "value": "fixed",
          "label": "t:sections.all.animation.image_behavior.options__3.label"
        },
        {
          "value": "zoom-in",
          "label": "t:sections.all.animation.image_behavior.options__4.label"
        },
        {
          "value": "parallax",
          "label": "t:sections.all.animation.image_behavior.options__5.label"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "t:sections.all.text-content.header_content"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "t:sections.all.text-content.heading.show_heading.label",
      "default": true
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "t:sections.all.text-content.heading.label",
      "default": "Add Heading here"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "small",
          "label": "t:sections.all.text-content.heading.size.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.all.text-content.heading.size.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.all.text-content.heading.size.options__3.label"
        },
        {
          "value": "s-large",
          "label": "t:sections.all.text-content.heading.size.options__4.label"
        }
      ],
      "default": "small",
      "label": "t:sections.all.text-content.heading.size.label"
    },
    {
      "type": "checkbox",
      "id": "heading_uppercase",
      "label": "t:sections.all.text-content.heading.uppercase.label",
      "default": false
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.all.text-content.description.label",
      "default": "<p>Add some description here</p>"
    },
    {
      "type": "header",
      "content": "t:sections.all.tab-panel.header_switch.content"
    },
    {
      "type": "checkbox",
      "id": "enable_auto_switch",
      "label": "t:sections.all.tab-panel.enable_auto_switch.label",
      "default": true
    },
    {
      "type": "range",
      "id": "switch_interval",
      "min": 3,
      "max": 15,
      "step": 1,
      "unit": "s",
      "label": "t:sections.all.tab-panel.switch_interval.label",
      "default": 3,
      "visible_if": "{{ section.settings.enable_auto_switch }}"
    },
    {
      "type": "header",
      "content": "t:sections.all.mobile.header_content"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "t:sections.all.image.background_image_picker.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.header_content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom.label",
      "default": 36
    },
    {
      "type": "header",
      "content": "t:sections.all.margin.header_content"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom.label",
      "default": 88
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "t:sections.press.blocks.review.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.all.image.image_picker.label"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "t:sections.all.image.image_width.label",
          "min": 20,
          "max": 300,
          "step": 5,
          "unit": "px",
          "default": 80
        },
        {
          "type": "inline_richtext",
          "id": "content",
          "label": "t:sections.all.text-content.content.label",
          "default": "Highlight what your customers are saying about your products, exceptional customer service, or competitive shipping rates to build trust and attract new buyers."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.press.presets.name",
      "category": "t:sections.all.categories.team_social_proof",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
