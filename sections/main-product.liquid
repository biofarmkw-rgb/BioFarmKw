              >
                {% render 'icon-sets', icon: 'clock', class: 'animate--bounce' %}
                <b>{{ 'products.product.estimate_delivery' | t }}: {{ before_date }} - {{ after_date }}</b>
              </div>
            {%- when 'bundle_sale' -%}
              {% liquid
                assign metafield_key_value = block.settings.metafield | replace: ' ', '' | split: '.'
