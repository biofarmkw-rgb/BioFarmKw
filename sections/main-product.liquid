                  class="product-info-bundle-sale product-info-block quick-view-remove"
                  {{ block.shopify_attributes }}
                >
                  <details-disclosure>
                    <details
                      class="details-disclosure"
                      {% if block.settings.default_expand %}
                        open
                      {% endif %}
                    >
                      <summary class="hover-trigger">
                        {%- if block.settings.image != blank -%}
                          <span class="media media--square animate--bounce">
                            {{- block.settings.image | image_url: width: 80 | image_tag -}}
                          </span>
                        {%- elsif block.settings.icon != 'none' -%}
                          {% render 'icon-sets', icon: block.settings.icon, class: 'animate--bounce' %}
                        {%- endif -%}
                        <b>{{ block.settings.heading | default: block.settings.page.title }}</b>

                        {% render 'icon-sets-basic', icon: 'caret-down', class: 'caret-icon' %}
                      </summary>
                      <div class="details-disclosure-content">
                        <bundle-sale-form
                          id="Bundle-Sale-{{ section.id }}"
                          class="bundle-sale-form"
                          data-section="{{ section.id }}"
                          data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                          {% if block.settings.quantity_sync %}
                            data-allow-external-quantity-update
                          {% endif %}
                        >
                          <form
                            id="Bundle-Form-{{ section.id }}"
                            action="{{ routes.cart_add_url }}"
                            method="post"
                          >
                            <div class="bundle-list">
                              {%- unless metafield_items == blank and block.settings.product_list == blank -%}
                                {%- for item in metafield_items limit: 5 -%}
                                  {% render 'card-bundle-product',
                                    card_product: item,
                                    section_id: section.id,
                                    image_width: '200px',
                                    image_width_mobile: '200px',
                                    show_quantity_selector: false,
                                    default_selected: block.settings.default_selected,
                                    show_discount: block.settings.show_discount,
                                    discount_percentage: block.settings.discount_percentage
                                  %}
                                {%- endfor -%}

                                {%- for item in block.settings.product_list -%}
                                  {% render 'card-bundle-product',
                                    card_product: item,
                                    section_id: section.id,
                                    image_width: '200px',
                                    image_width_mobile: '200px',
                                    show_quantity_selector: false,
                                    default_selected: block.settings.default_selected,
                                    show_discount: block.settings.show_discount,
                                    discount_percentage: block.settings.discount_percentage
                                  %}
                                {%- endfor -%}
                              {%- else -%}
                                {%- for i in (1..3) -%}
                                  {% render 'card-placeholder', show_horizontal: true %}
                                {%- endfor -%}
                              {%- endunless -%}
                            </div>
                            <div class="bundle-footer">
                              {%- if block.settings.show_discount -%}
                                <p class="bundle-notice light">{{ 'bundle.discount_notice' | t }}</p>
                              {%- endif -%}
                              <div class="bundle-total">
                                <b class="price">
                                  {% if settings.currency_code_enabled -%}
                                    {{ 0 | money_with_currency }}
                                  {%- else -%}
                                    {{ 0 | money }}
                                  {%- endif -%}
                                </b>
                              </div>
                            </div>
                          </form>
                        </bundle-sale-form>
                      </div>
                    </details>
                  </details-disclosure>
                </div>
                <script src="{{ 'bundle-sale-form.js' | asset_url }}" defer></script>
              {%- endif -%}
            {%- when 'care' -%}
              {% liquid
                if cares != blank
                  continue
                endif

                assign cares = section.blocks | where: 'type', 'care'
              %}
              <div class="product-info-cares product-info-block">
                <b class="info-block-heading font-heading">{{ 'products.product.care_service' | t }}</b>
