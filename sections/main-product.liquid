                              show_compare_at_price: true,
                              class: 'care-price'
                            %}
                          {%- else -%}
                            {% render 'price', class: 'care-price' %}
                          {%- endif -%}
                        </div>

                        {%- if block.settings.description != blank -%}
                          <div class="care-description light">{{ block.settings.description }}</div>
                        {%- endif -%}
                        {%- unless block.settings.product == blank -%}
                          <modal-opener
                            class="care-detail-button link link-text show-underline"
                            role="button"
                            aria-haspopup="dialog"
                            aria-expanded="false"
                            aria-controls="Care-Modal-{{ section.id }}-{{ block.id }}"
                          >
                            {{ 'general.view_details' | t }}
                          </modal-opener>
                        {%- endunless -%}
