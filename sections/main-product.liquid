                        {% if block.settings.product != blank %}
                          data-id="{{ block.settings.product.selected_or_first_available_variant.id }}"
                        {% endif %}
                        {% if forloop.first %}
                          aria-selected
                        {% endif %}
                        {{ block.shopify_attributes }}
                      >
                        <div class="care-header">
                          <span class="care-image media media--square">
                            {%- if block.settings.product != blank -%}
