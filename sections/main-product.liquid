{% comment %} 所有的变体图片 {% endcomment %}
{% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
{{ 'section-main-product.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      .section-{{ section.id }}-margin {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
      }
  }
{%- endstyle -%}
<div
  id="Main-Product-{{ section.id }}"
  class="section-main-product color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin"
  data-section="{{ section.id }}"
>
  {% liquid
    assign media_count = product.media.size
    if section.settings.hide_variants and media_count > 1 and variant_images.size > 0
      assign media_count = media_count | minus: variant_images.size | plus: 1
    endif

    assign media_layout = section.settings.media_layout
    if media_count <= 1
      assign media_layout = 'stack'
    endif

    assign is_pre_order = false
    if product.selected_or_first_available_variant.inventory_management == 'shopify' and product.selected_or_first_available_variant.inventory_quantity <= 0 and product.selected_or_first_available_variant.inventory_policy == 'continue' and product.selected_or_first_available_variant.requires_shipping and settings.enable_preorder_badge
      assign is_pre_order = true
    endif

    assign check_against_inventory = true
    if product.selected_or_first_available_variant.inventory_management != 'shopify' or product.selected_or_first_available_variant.inventory_policy == 'continue'
      assign check_against_inventory = false
    endif

    assign quantity_rule_soldout = false
    if product.selected_or_first_available_variant.quantity_rule.min > product.selected_or_first_available_variant.inventory_quantity and check_against_inventory
      assign quantity_rule_soldout = true
    endif

    assign cant_sell = false
    if product.selected_or_first_available_variant.available == false or quantity_rule_soldout or product.selected_or_first_available_variant == null
      assign cant_sell = true
    endif

    assign product_form_id = 'product-form-' | append: section.id
    assign has_3d_model = product.media | has: 'media_type', 'model'
    assign sibling_products = blank
    assign cares = blank
    assign popup_blocks = section.blocks | where: 'type', 'popup'
  %}
  <div class="product-container page-width section-{{ section.id }}-padding">
    <div class="product-container-main product-media-layout--{{ media_layout }}{% if media_count < 1  %} has-no-media{% endif %} product-media--{{ section.settings.media_size }} product-media--{{ section.settings.media_position }} product-thumbnail--{{ section.settings.thumbnail_size }}{% if section.settings.enable_sticky_media %} product-scroll--sticky{% endif %}">
      {% render 'product-media-gallery',
        product: product,
        section_id: section.id,
        variant_images: variant_images,
        enable_scale_image: section.settings.enable_scale_image,
        enable_magnifier: section.settings.enable_image_magnifier,
        image_zoom_ratio: section.settings.image_zoom_ratio,
        hide_variants: section.settings.hide_variants,
        hide_thumbnail_mobile: section.settings.hide_thumbnail_mobile,
        enable_slide_smooth: section.settings.enable_slide_smooth,
        enable_video_looping: section.settings.enable_video_looping,
        enable_video_autoplay: section.settings.enable_video_autoplay,
        media_layout: media_layout,
        media_size: section.settings.media_size,
        media_ratio: section.settings.media_ratio,
        media_fit: section.settings.media_fit
      %}
      <product-info
        id="Product-Info-{{ section.id }}"
        class="product-info hidden-scrollbar"
        data-section="{{ section.id }}"
        data-url="{{ product.url }}"
        data-id="{{ product.id }}"
      >
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              <div class="product-info-app product-info-block">
                {% render block %}
              </div>
            {%- when 'custom_liquid' -%}
              <div class="product-info-custom-liquid product-info-block" {{ block.shopify_attributes }}>
                {{ block.settings.custom_liquid }}
              </div>
            {%- when 'text' -%}
              <div class="product-info-text product-info-block" {{ block.shopify_attributes }}>
                {% assign description_id = 'Expandable-Container-'
                  | append: section.id
                  | append: '-'
                  | append: block.id
                %}
                {% render 'limit-height-description',
                  id: description_id,
                  content: block.settings.text,
                  if_limit_height: block.settings.limit_description_height
                %}
              </div>
            {%- when 'title' -%}
              <div class="product-info-title product-info-block" {{ block.shopify_attributes }}>
                <h1 class="product-title heading-size--{{ block.settings.size }} mb-0">{{ product.title }}</h1>

                {% liquid
                  assign show_rating = false
                  if block.settings.show_rating and product.metafields.reviews.rating.value != blank or block.settings.enable_rating_preview
                    assign show_rating = true
                  endif

                  assign show_vendor = false
                  if block.settings.show_vendor and product.vendor != empty
                    assign show_vendor = true
                  endif

                  assign show_type = false
                  if block.settings.show_type and product.type != empty
                    assign show_type = true
                  endif
                %}
                {%- if show_vendor or show_type or show_rating -%}
                  <div class="product-title-meta">
                    <div class="vendor-and-type">
                      {%- if show_vendor -%}
                        <span class="product-vendor">
                          <small class="light">{{ 'products.product.vendor' | t }}:</small>
                          {{ product.vendor | link_to_vendor: class: 'vendor-name link link-text show-underline' }}
                        </span>
                      {%- endif -%}

                      {%- if show_type -%}
                        <span class="product-type">
                          <small class="light">{{ 'products.product.type' | t }}:</small>
                          {{ product.type | link_to_type: class: 'type-name link link-text show-underline' }}
                        </span>
                      {%- endif -%}
                    </div>
                    {%- if show_rating -%}
                      {% liquid
                        assign rating_value = product.metafields.reviews.rating.value.rating
                        assign rating_max_value = product.metafields.reviews.rating.value.scale_max
                        assign rating_total_count = product.metafields.reviews.rating_count

                        if block.settings.enable_rating_preview
                          assign rating_value = 4.5
                          assign rating_max_value = 5
                          assign rating_total_count = 1201
                        endif
                      %}
                      <a
                        class="product-rating link"
                        {% if block.settings.target_anchor != blank %}
                          href="{{ block.settings.target_anchor }}"
                        {% else %}
                          aria-disabled="true"
                          role="link"
                        {% endif %}
                      >
                        {%- render 'star-rating',
                          rating_value: rating_value,
                          max_value: rating_max_value,
                          total_count: rating_total_count,
                          size: block.settings.star_size,
                          show_score: true,
                          show_count: true
                        -%}
                      </a>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>
            {%- when 'price' -%}
              <div class="product-info-price product-info-block" {{ block.shopify_attributes }}>
                <div
                  id="Price-{{ section.id }}"
                  class="product-price"
                  role="status"
                >
                  {%- render 'price',
                    product_object: product,
                    use_variant: true,
                    show_badge: block.settings.show_sale_badge,
                    badge_type: block.settings.sale_badge_type,
                    show_compare_at_price: true
                  -%}
                  {%- if is_pre_order -%}
                    <input type="hidden" name="properties[Sale type]" value="Pre-order" form="{{ product_form_id }}">
                  {%- endif -%}
                </div>
                {%- if block.settings.show_tax -%}
                  <div class="product-tax rte">
                    {%- if cart.duties_included and cart.taxes_included -%}
                      {{ 'products.product.include_duties_and_taxes' | t }}
                    {%- elsif cart.taxes_included -%}
                      {{ 'products.product.include_taxes' | t }}
                    {%- elsif cart.duties_included -%}
                      {{ 'products.product.include_duties' | t }}
                    {%- endif -%}

                    {%- if shop.shipping_policy.body != blank -%}
                      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    {%- endif -%}
                  </div>
                {%- endif -%}

                <div class="product-form">
                  {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                  {%- form 'product', product, id: product_form_installment_id, class: 'installment' -%}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {{ form | payment_terms }}
                  {%- endform -%}
                </div>
              </div>
            {%- when 'description' -%}
              {%- if product.description != blank -%}
                <div
                  class="product-info-description product-info-block"
                  {{ block.shopify_attributes }}
                >
                  {% liquid
                    if block.settings.enable_brief
                      assign description_content = product.description | strip_html | truncatewords: block.settings.limit
                    else
                      assign description_content = product.description
                    endif

                    assign description_id = 'Expandable-Container-' | append: section.id | append: '-' | append: block.id
                  %}

                  {% render 'limit-height-description',
                    id: description_id,
                    content: description_content,
                    if_limit_height: block.settings.limit_description_height
                  %}
                </div>
              {%- endif -%}
            {%- when 'info_card' -%}
              <div
                class="product-info-info-card product-info-block color-{{ block.settings.color_scheme }} gradient"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.enable_close -%}
                  <button
                    type="button"
                    class="close-button button button--small button--icon button--air"
                    onclick="this.closest('.product-info-info-card').remove();"
                  >
                    {% render 'icon-sets-basic', icon: 'close' %}
                  </button>
                {%- endif -%}
                <div class="info-card-heading">
                  {%- if block.settings.icon != 'none' -%}
                    {% render 'icon-sets', icon: block.settings.icon, class: 'card-icon' %}
                  {%- endif -%}
                  <b>{{ block.settings.heading | escape }}</b>
                </div>
                {%- if block.settings.description != blank -%}
                  <div class="info-card-description rte">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}
              </div>
            {%- when 'sku' -%}
              <div
                id="Sku-{{ section.id }}"
                class="product-info-sku product-info-block"
                role="status"
                {{ block.shopify_attributes }}
              >
                {%- if product.selected_or_first_available_variant.sku != blank -%}
                  {{ 'products.product.sku' | t }}:
                  {{ product.selected_or_first_available_variant.sku -}}
                {%- endif -%}
              </div>
            {%- when 'sharing' -%}
              <div class="product-info-sharing product-info-block" {{ block.shopify_attributes }}>
                {%- liquid
                  assign share_url = product.selected_variant.url | default: product.url | prepend: request.origin
                  assign title = product.title
                  assign media = product.featured_image
                  if product.selected_variant != blank
                    assign title = title | append: ',' | append: product.selected_variant.title
                    assign media = product.selected_variant.featured_image
                  endif
                -%}
                <small class="light">{{ 'general.share.to' | t }}:</small>
                {% render 'share-links',
                  link: share_url,
                  title: title,
                  media: media,
                  icon_style: block.settings.style,
                  show_tooltip: block.settings.show_tooltip
                %}
              </div>
            {%- when 'countdown' -%}
              <div
                class="product-info-countdown product-info-block color-{{ block.settings.color_scheme }} gradient"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.background_image != blank -%}
                  <div class="background-image" style="opacity: {{ block.settings.background_image_opacity }}%;">
                    {% render 'lazy-image', image_object: block.settings.background_image %}
                  </div>
                {%- endif -%}
                <div class="content-group">
                  <b class="countdown-heading">{{ block.settings.heading | escape }}</b>
                  <div class="countdown-description rte light">{{ block.settings.description }}</div>
                  {% render 'countdown',
                    end_time: block.settings.end_time,
                    end_text: block.settings.end_text,
                    hide_when_end: block.settings.hide_when_end,
                    timer_background: block.settings.timer_background_color,
                    timer_foreground: block.settings.timer_foreground_color
                  %}
                </div>
              </div>
            {%- when 'variant_picker' -%}
              {% liquid
                assign size_popup_block = blank
                for popup_block in popup_blocks
                  if popup_block.settings.bind_size_picker
                    assign size_popup_block = popup_block
                    break
                  endif
                endfor
              %}

              {% render 'product-variant-picker',
                product: product,
                section_id: section.id,
                block: block,
                size_popup_block: size_popup_block,
                product_form_id: product_form_id,
                update_url: true
              %}
            {%- when 'buy_buttons' -%}
              <div class="product-info-buy-buttons product-info-block" {{ block.shopify_attributes }}>
                {%- render 'buy-buttons',
                  section_id: section.id,
                  product: product,
                  product_form_id: product_form_id,
                  show_quantity_selector: block.settings.show_quantity_selector,
                  is_quantity_selector_standalone: block.settings.is_selector_standalone,
                  show_gift_card_recipient: block.settings.show_gift_card_recipient,
                  show_dynamic_checkout: block.settings.show_dynamic_checkout,
                  show_notify_form: block.settings.show_notify_form,
                  is_pre_order: is_pre_order,
                  cant_sell: cant_sell
                -%}
              </div>
            {%- when 'separator' -%}
              <div
                class="product-info-separator product-info-block{% if block.settings.show_line %} show-line{% endif %} quick-view-remove"
                style="margin-top: {{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px;"
                {{ block.shopify_attributes }}
              ></div>
            {%- when 'inventory' -%}
              <div
                id="Inventory-{{ section.id }}"
                class="product-info-inventory product-info-block"
                {{ block.shopify_attributes }}
              >
                {%- if product.selected_or_first_available_variant.inventory_management == 'shopify'
                  and is_pre_order == false
                -%}
                  {% render 'inventory-status',
                    variant: product.selected_or_first_available_variant,
                    threshold: block.settings.inventory_threshold,
                    low_alert_message: block.settings.low_stock_alert,
                    full_alert_message: block.settings.full_stock_alert,
                    show_bar: block.settings.show_percentage_bar,
                    low_bar_color: block.settings.low_stock_bar_color,
                    full_bar_color: block.settings.full_stock_bar_color
                  %}
                {%- endif -%}
              </div>
            {%- when 'collapsible' -%}
              <div class="product-info-collapsible product-info-block" {{ block.shopify_attributes }}>
                <details-disclosure>
                  <details
                    class="details-disclosure"
                    {% if block.settings.default_expand %}
                      open
                    {% endif %}
                  >
                    <summary class="hover-trigger">
                      {%- if block.settings.image != blank -%}
                        <span class="media media--square animate--bounce">
                          {{- block.settings.image | image_url: width: 80 | image_tag -}}
                        </span>
                      {%- elsif block.settings.icon != 'none' -%}
                        {% render 'icon-sets', icon: block.settings.icon, class: 'animate--bounce' %}
                      {%- endif -%}
                      <b>
                        {{ block.settings.heading | default: block.settings.page.title }}
                      </b>

                      {% render 'icon-sets-basic', icon: 'caret-down', class: 'caret-icon' %}
                    </summary>
                    <div class="details-disclosure-content">
                      <div class="rte">
                        {%- if block.settings.content_image != blank -%}
                          {{
                            block.settings.content_image
                            | image_url: width: 800
                            | image_tag: loading: 'lazy', class: 'block-image'
                          }}
                        {%- endif -%}
                        {%- if block.settings.content != blank -%}
                          {{ block.settings.content }}
                        {%- endif -%}
                        {%- if block.settings.page.content != blank -%}
                          {{ block.settings.page.content }}
                        {%- endif -%}
                      </div>
                    </div>
                  </details>
                </details-disclosure>
              </div>
            {%- when 'icon_text' -%}
              <div class="product-info-icon-text product-info-block hover-trigger" {{ block.shopify_attributes }}>
                {%- if block.settings.image != blank -%}
                  <span class="media media--square animate--bounce">
                    {{- block.settings.image | image_url: width: 80 | image_tag -}}
                  </span>
                {%- elsif block.settings.icon != 'none' -%}
                  {% render 'icon-sets', icon: block.settings.icon, class: 'animate--bounce' %}
                {%- endif -%}
                <div>{{ block.settings.description }}</div>
              </div>
            {%- when 'badge_list' -%}
              <div class="product-info-badge-list product-info-block" {{ block.shopify_attributes }}>
                {%- render 'product-badges', product: product, show_sale_badge: true -%}
              </div>
            {%- when 'keyword_list' -%}
              {% assign keyword_list = block.settings.keywords | replace: '，', ',' | split: ',' %}

              {%- if keyword_list.size > 0 -%}
                <div class="product-info-keyword-list product-info-block" {{ block.shopify_attributes }}>
                  <ul
                    class="keyword-list list-unstyled"
                    style="--color-background: {{ block.settings.background_color.red }}, {{ block.settings.background_color.green }}, {{ block.settings.background_color.blue }}; --color-foreground: {{ block.settings.foreground_color.red }}, {{ block.settings.foreground_color.green }}, {{ block.settings.foreground_color.blue }};"
                  >
                    {%- for keyword in keyword_list -%}
                      <li class="keyword-item">
                        {%- if block.settings.show_icon -%}
                          {%- if block.settings.icon_type == 'index' -%}
                            {{ forloop.index }}.&nbsp;
                          {%- else -%}
                            {% render 'icon-sets-basic', icon: block.settings.icon_type %}
                          {%- endif -%}
                        {%- endif -%}
                        {{- keyword | strip -}}
                      </li>
                    {%- endfor -%}
                  </ul>
                </div>
              {%- endif -%}
            {%- when 'popup' -%}
              {% if block.settings.bind_size_picker %}{% continue %}{% endif %}
              <modal-opener
                class="product-info-popup product-info-block hover-trigger"
                role="button"
                aria-haspopup="dialog"
                aria-expanded="false"
                aria-controls="Popup-Modal-{{ section.id }}-{{ block.id }}"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.image != blank -%}
                  <span class="media media--square animate--bounce">
                    {{- block.settings.image | image_url: width: 80 | image_tag -}}
                  </span>
                {%- elsif block.settings.icon != 'none' -%}
                  {% render 'icon-sets', icon: block.settings.icon, class: 'animate--bounce' %}
                {%- endif -%}
                <span class="link link-text show-underline">{{ block.settings.heading | escape }}</span>
              </modal-opener>
            {%- when 'sibling_product' -%}
              {% liquid
                if sibling_products != blank
                  continue
                endif

                assign sibling_products = section.blocks | where: 'type', 'sibling_product'
              %}
              <div
                class="product-info-sibling-products product-info-block auto-grid quick-view-remove"
                style="--item-min-size: 120px; --item-min-size-mobile: 80px;"
              >
                {%- for sibling_product in sibling_products -%}
                  {% liquid
                    assign sibling_index = forloop.index0 | modulo: 6 | plus: 1
                    assign sibling_placeholder = 'product-' | append: sibling_index
                  %}
                  <div
                    class="sibling-product grid-item"
                    {{ sibling_product.shopify_attributes }}
                  >
                    <div class="sibling-image media media--square">
                      {% render 'lazy-image',
                        image_object: sibling_product.settings.product.featured_image,
                        widths: '165, 360, 450, 660',
                        sizes: '200px',
                        placeholder: sibling_placeholder
                      %}
                    </div>
                    {%- if product == sibling_product.settings.product -%}
                      <span class="select-icon-wrap" aria-label="{{ 'accessibility.selected' | t }}">
                        {% render 'icon-sets-basic', icon: 'success' %}
                      </span>
                    {%- endif -%}
                    {%- if sibling_product.settings.title != empty -%}
                      <div class="sibling-title">
                        <a href="{{ sibling_product.settings.product.url }}" class="link link-full">
                          <small>{{- sibling_product.settings.title | escape -}}</small>
                        </a>
                      </div>
                    {%- endif -%}
                    {%- if sibling_product.settings.show_price -%}
                      <small class="sibling-price">
                        {%- if sibling_product.settings.product != blank -%}
                          {{ sibling_product.settings.product.price | money }}
                        {%- else -%}
                          {{ '1999' | money }}
                        {%- endif -%}
                      </small>
                    {%- endif -%}
                  </div>
                {%- endfor -%}
              </div>
            {%- when 'complementary' -%}
              <product-recommendations
                id="Product-Recommendations-{{ section.id }}"
                class="product-info-complementary product-info-block quick-view-remove no-js-hidden{% if block.settings.show_separator_line %} with-top-border{% endif %}"
                data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ block.settings.limit }}&intent=complementary"
                role="complementary"
                {{ block.shopify_attributes }}
              >
                <b class="info-block-heading font-heading">{{ block.settings.heading | escape }}</b>
                <div class="products-container">
                  <div class="complementary-slide">
                    <ul class="product-list list-unstyled">
                      {%- for i in (1..block.settings.items_per_slide) -%}
                        <li class="product-item">
                          {% render 'card-placeholder', show_horizontal: true %}
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                </div>
                {%- if recommendations.performed and recommendations.products_count > 0 -%}
                  <template>
                    <slider-component
                      class="recommendation-slider slider"
                      data-slide-desktop
                      data-slide-mobile
                      data-draggable
                      data-slide-smooth
                    >
                      <div class="slider-container">
                        {% liquid
                          assign number_of_slides = recommendations.products_count | plus: 0.0 | divided_by: block.settings.items_per_slide | ceil

                          # Initialize the count of shown products
                          assign number_has_show = 0
                        %}
                        <ul
                          id="Slider-Complementary-Product-{{ block.id }}"
                          class="slider-wrapper"
                          {% if number_of_slides > 1 %}
                            aria-label="{{ 'general.slider.name' | t }}"
                          {% endif %}
                        >
                          {%- for i in (1..number_of_slides) -%}
                            <li
                              id="Slide-{{ block.id }}-{{ forloop.index }}"
                              class="complementary-slide slider-slide"
                              {% if number_of_slides > 1 %}
                                aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                              {% endif %}
                            >
                              <ul class="product-list list-unstyled">
                                {%- for product in recommendations.products
                                  limit: block.settings.items_per_slide
                                  offset: number_has_show
                                -%}
                                  {% assign number_has_show = number_has_show | plus: 1 %}
                                  <li class="product-item focus-inset" tabindex="0">
                                    {%- render 'card-product',
                                      card_product: product,
                                      image_width: '200px',
                                      image_width_mobile: '200px',
                                      truncate_title: block.settings.enable_truncate_title,
                                      show_quick_add: settings.card_enable_quick_buy,
                                      show_horizontal: true
                                    -%}
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </div>
                    </slider-component>
                  </template>
                {%- endif -%}
              </product-recommendations>
            {%- when 'pickup_availability' -%}
              {%- assign pick_up_availabilities = product.selected_or_first_available_variant.store_availabilities
                | where: 'pick_up_enabled', true
              -%}
              <pickup-availability
                class="product-info-pickup-availabilities product-info-block no-js-hidden quick-view-remove"
                {% if product.selected_or_first_available_variant.available and pick_up_availabilities.size > 0 %}
                  available
                {% endif %}
                data-root-url="{{ routes.root_url }}"
                data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                {{ block.shopify_attributes }}
              ></pickup-availability>
              <script src="{{ 'pickup-availability.js' | asset_url }}" defer="defer"></script>
            {%- when 'mini_checkout' -%}
              {% render 'mini-checkout',
                section_id: section.id,
                block: block,
                blocks: section.blocks,
                product_form_id: product_form_id,
