    <script src="{{ 'product-model.js' | asset_url }}" defer></script>
  {%- endif -%}
  {% comment %} 3D相关 E {% endcomment %}
</div>

{%- if product.media.size > 0 and section.settings.enable_scale_image -%}
  {% comment %} 产品相册放大 {% endcomment %}
  {% render 'product-media-modal',
