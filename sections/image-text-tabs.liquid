{{ 'section-image-text-tabs.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-image-text-tabs isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-margin">
  <image-text-tabs class="section__wrapper image-text-tabs__wrapper page-width image-width--{{ section.settings.image_width }} image-position--{{ section.settings.image_position }} section-{{ section.id }}-padding">
    <div class="tab-images">
      {% capture sizes %}(min-width: {{ settings.page_width }}px) {{ settings.page_width | divided_by: 2 }}px, (min-width: 750px) 50vw, 100vw{% endcapture %}
      {%- for block in section.blocks -%}
        {% liquid
          assign index = forloop.index0 | modulo: 6 | plus: 1
          assign placeholder_image = 'collection-' | append: index
        %}
        <div
          class="tab-image media media--{{ section.settings.image_ratio }}{% unless forloop.first %} hidden{% endunless %}"
          data-index="{{ forloop.index }}"
          {% if section.settings.image_ratio == 'adapt' %}
            {% liquid
              assign ratio = block.settings.image.aspect_ratio | default: 1
              assign height = 1 | divided_by: ratio | times: 100 | append: '%'
            %}
            style="--ratio-percent: {{ height }};"
          {% endif %}
          {{ block.shopify_attributes }}
        >
          {% render 'lazy-image', image_object: block.settings.image, sizes: sizes, placeholder: placeholder_image %}
        </div>
      {%- endfor -%}
    </div>
    <tab-panel class="tab-contents tab-panel tab-style--{{ section.settings.tab_style | default: 'line' }}{% if section.settings.tab_style == 'line' %} with-seperate{% endif %}">
      {%- if section.settings.show_heading -%}
        <div class="section-header-block content-group group--center width--medium">
          {% if section.settings.heading != blank %}
            <h2 class="heading-block heading-size--{{ section.settings.heading_size }}{% if section.settings.heading_uppercase %} uppercase{% endif %}">
              {{ section.settings.heading }}
            </h2>
          {%- endif -%}
          {%- if section.settings.description != blank -%}
            <div class="description-block rte">{{ section.settings.description }}</div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <scrollable-content-viewer class="tabs-wrapper scrollable-content" data-draggable>
        <ul class="tab-panel-tabs scrollable-content-wrapper tabs-alignment--center list-unstyled" role="tablist">
          {%- for block in section.blocks -%}
            <li
              id="Image-Text-Tab-{{ section.id }}-{{ forloop.index }}"
              class="tab scrollable-content-item focus-inset"
              role="tab"
              tabindex="0"
              aria-controls="Image-Text-Panel-{{ section.id }}-{{ forloop.index }}"
              {% if forloop.first %}
                aria-selected="true"
              {% endif %}
              data-index="{{ forloop.index }}"
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.icon_image != blank -%}
                <span class="media media--square">
                  {{ block.settings.icon_image | image_url: width: 300 | image_tag }}
                </span>
              {%- elsif block.settings.icon != 'none' -%}
                {% render 'icon-sets', icon: block.settings.icon -%}
              {%- endif -%}
              {{ block.settings.title | escape }}
            </li>
          {%- endfor -%}
        </ul>
      </scrollable-content-viewer>
      <div class="tab-panel-panels">
        {%- for block in section.blocks -%}
          <div
            id="Image-Text-Panel-{{ section.id }}-{{ forloop.index }}"
            class="panel content-group group--center width--medium text-align--center"
            role="tabpanel"
            {% unless forloop.first %}
              aria-hidden="true"
            {% endunless %}
            aria-labelledby="Image-Text-Tab-{{ section.id }}-{{ forloop.index }}"
          >
            {%- if block.settings.content != blank -%}
              <div class="text-content-description rte">{{ block.settings.content }}</div>
            {%- endif -%}
            {%- if block.settings.button_label != blank -%}
              <a
                class="button button--small"
                {% if block.settings.button_link != blank %}
                  href="{{ block.settings.button_link }}"
                  {% if block.settings.open_in_new_tab %}
                    target="_blank"
                    rel="noopener nofollow"
                  {% endif %}
                {% else %}
                  role="link"
                  aria-disabled="true"
                {% endif %}
              >
                {{ block.settings.button_label | escape }}
                {%- if block.settings.show_arrow -%}
                  {% render 'icon-sets-basic', icon: 'right', class: 'caret-icon' %}
                {%- endif -%}
              </a>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </tab-panel>
  </image-text-tabs>
</div>
<script src="{{ 'image-text-tabs.js' | asset_url }}" defer></script>
