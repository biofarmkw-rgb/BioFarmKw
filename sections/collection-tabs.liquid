{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="collection-tabs isolate section-{{ section.id }}-margin color-{{ section.settings.color_scheme }} gradient">
  <div class="section__wrapper collection-tabs__wrapper page-width section-{{ section.id }}-padding">
    <tab-panel class="tab-panel tab-style--{{ section.settings.tab_style | default: 'line' }}{% if section.settings.tab_style == 'line' %} with-seperate{% endif %}">
      <scrollable-content-viewer class="tabs-wrapper scrollable-content" data-draggable>
        <ul
          class="tab-panel-tabs scrollable-content-wrapper tabs-alignment--{{ section.settings.tab_alignment | default: 'center' }} list-unstyled"
          role="tablist"
        >
          {%- for block in section.blocks -%}
            <li
              id="Collection-Tab-{{ section.id }}-{{ forloop.index }}"
              class="tab scrollable-content-item focus-inset"
              role="tab"
              tabindex="0"
              aria-controls="Collection-Panel-{{ section.id }}-{{ forloop.index }}"
              {% if forloop.first %}
                aria-selected="true"
              {% endif %}
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.image != blank -%}
                <span class="media media--square">{{ block.settings.image | image_url: width: 80 | image_tag }}</span>
              {%- elsif block.settings.icon != 'none' -%}
                {% render 'icon-sets', icon: block.settings.icon %}
              {%- endif -%}
              {{ block.settings.title | escape }}
            </li>
          {%- endfor -%}
        </ul>
      </scrollable-content-viewer>
      <div class="tab-panel-panels">
        {%- for block in section.blocks -%}
          <div
            id="Collection-Panel-{{ section.id }}-{{ forloop.index }}"
            class="panel"
            role="tabpanel"
            {% unless forloop.first %}
              aria-hidden="true"
            {% endunless %}
            aria-labelledby="Collection-Tab-{{ section.id }}-{{ forloop.index }}"
          >
            {% render 'list-products',
              products: block.settings.collection.products,
              section_id: section.id,
              products_limit: block.settings.limit,
              slider_on_desktop: block.settings.slider_on_desktop,
              slider_on_mobile: block.settings.slider_on_mobile,
              show_seek_bar: block.settings.show_seek_bar,
              show_nav_buttons: block.settings.show_nav_buttons,
              color_scheme: block.settings.color_scheme,
              image_ratio: block.settings.image_ratio,
              card_size: block.settings.card_size,
              text_alignment: block.settings.text_alignment,
              show_wrapper: block.settings.show_card_wrapper
            %}
            {%- if block.settings.collection.products_count > block.settings.limit
              and block.settings.collection != blank
              and block.settings.show_view_more
            -%}
              <div class="view-more-wrapper text-align--center mt-4">
                <a
                  class="button button--border"
                  {% if block.settings.collection != blank %}
                    href="{{ block.settings.collection.url }}"
                  {% else %}
                    role="link"
                    aria-disabled="true"
                  {% endif %}
                >
                  {{ 'general.view_all' | t }}
                  {% render 'icon-sets-basic', icon: 'right', class: 'icon-caret' %}
                </a>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </tab-panel>
  </div>

  {% render 'section-id-tip', section_id: section.id %}
</div>
