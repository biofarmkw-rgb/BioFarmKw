{{ 'section-embedded-image-heading.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="embedded-image-heading isolate section-{{ section.id }}-margin color-{{ section.settings.color_scheme }} gradient">
  <div
    class="section__wrapper embedded-image-heading__wrapper page-width section-{{ section.id }}-padding"
    style="--heading-size: {{ section.settings.font_size }}px; --heading-size-mobile: {{ section.settings.font_size_mobile }}px;"
  >
    {%- for block in section.blocks -%}
      {%- if block.type == 'heading' -%}
        <h2 class="embedded-heading" {{ block.shopify_attributes }}>{{ block.settings.text }}</h2>
      {%- elsif block.type == 'image' -%}
        <span
          class="embedded-image"
          style="--image-width: {{ block.settings.image_width }}px; --image-width-mobile: {{ block.settings.image_width_mobile }}px;"
          {{ block.shopify_attributes }}
        >
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 300 | image_tag: class: 'embedded-image' }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg embedded-image' }}
          {%- endif -%}
        </span>
      {%- endif -%}
    {%- endfor -%}
  </div>

  {% render 'section-id-tip', section_id: section.id %}
</div>
{% schema %}
{
  "name": "t:sections.embedded-image-heading.name",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.drawer", "custom.popup"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "t:sections.all.text-content.text.size.label",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 72
    },
    {
      "type": "header",
      "content": "t:sections.all.mobile.header_content"
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "label": "t:sections.all.text-content.text.size.label",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.header_content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom.label",
      "default": 36
    },
    {
      "type": "header",
      "content": "t:sections.all.margin.header_content"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom.label",
      "default": 88
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:blocks.heading.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "t:sections.all.text-content.text.label",
          "default": "Heading text"
        }
      ]
    },
    {
      "type": "image",
      "name": "t:blocks._image.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.all.image.image_picker.label"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "t:sections.all.image.image_width.label",
          "min": 20,
          "max": 300,
          "step": 5,
          "unit": "px",
          "default": 100
        },
        {
          "type": "header",
          "content": "t:sections.all.mobile.header_content"
        },
        {
          "type": "range",
          "id": "image_width_mobile",
          "label": "t:sections.all.image.image_width.label",
          "min": 20,
          "max": 300,
          "step": 5,
          "unit": "px",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.embedded-image-heading.presets.name",
      "category": "t:sections.all.categories.content_info",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "image"
        },
        {
          "type": "heading"
        },
        {
          "type": "heading"
        },
        {
          "type": "image"
        },
        {
          "type": "heading"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
