{% doc %}
  Social Icons

  @description
  Renders a list of social media icons with optional tooltip, style, and size customization.

  @param {string} [class] - CSS class to add to the <ul> element (optional).
  @param {boolean} [show_tooltip] - Whether to show tooltip on hover (optional, default true).
  @param {string} [style] - Icon style: 'icon' | 'border' | 'wrapper' | 'solid' (optional, default 'icon').
  @param {string} [size] - Icon size: 'small' | 'medium' | 'large' (optional, default 'small').

  @example
  {% render 'social-icons', class: 'my-class', show_tooltip: true, style: 'icon', size: 'small' %}
{% enddoc %}

<ul class="social-icons social-list list-unstyled{% if class %} {{ class }}{% endif %} social-style--{{ style | default: 'icon' }} social-size--{{ size | default: 'small' }}">
  {%- if settings.social_facebook_link != blank -%}
    <li
      class="social-item hover-trigger"
      {% if show_tooltip == true %}
        data-toggle="tooltip"
        data-title="Facebook"
      {% endif %}
    >
      <a href="{{ settings.social_facebook_link }}" class="link focus-inset" target="_blank">
        {%- render 'icon-sets-basic', icon: 'meta', class: 'animate--shake' -%}
        <span class="visually-hidden">Facebook</span>
      </a>
    </li>
