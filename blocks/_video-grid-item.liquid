<li
  id="Slide-{{ section.id }}-{{ block.id }}"
  class="shopify-block video-grid-item-block grid-item item-columns--{{ block.settings.width | default: 1 }} item-rows--{{ block.settings.height | default: 1 }} slider-slide color-{{ block.settings.color_scheme }} gradient focus-inset"
  tabindex="0"
  {{ block.shopify_attributes }}
>
  <deferred-media
    class="grid-item-media deferred-media video-model-media media-fit--cover{% if block.settings.video_mobile != blank %} small-hide{% endif %}"
    data-load-when-visible
    style="opacity: {{ block.settings.video_opacity }}%;"
  >
    <div class="media-poster media">
      {% liquid
        assign alt = 'sections.video.load_video' | t: description: block.settings.video.alt
        assign poster = block.settings.video.preview_image
      %}
      {% render 'lazy-image', image_object: poster, alt: alt, placeholder: 'image' %}
    </div>
    {%- if block.settings.video != blank -%}
      <template>
        {{
          block.settings.video
          | video_tag: image_size: '1600x', autoplay: true, loop: true, controls: false, muted: true
        }}
      </template>
    {%- endif -%}
  </deferred-media>
  {%- if block.settings.video_mobile != blank -%}
    <deferred-media
      class="grid-item-media deferred-media video-model-media media-fit--cover medium-hide large-up-hide"
      data-load-when-visible
      style="opacity: {{ block.settings.video_opacity }}%;"
    >
      <div class="media-poster media">
        {% liquid
          assign alt = 'sections.video.load_video' | t: description: block.settings.video_mobile.alt
          assign poster = block.settings.video_mobile.preview_image
        %}
        {% render 'lazy-image', image_object: poster, sizes: '100vw', alt: alt, placeholder: 'image' %}
      </div>
      {%- if block.settings.video_mobile != blank -%}
        <template>
          {{
            block.settings.video_mobile
            | video_tag: image_size: '800x', autoplay: true, loop: true, controls: false, muted: true
          }}
        </template>
      {%- endif -%}
    </deferred-media>
  {%- endif -%}
  <div class="grid-item-content position-container position--{{ block.settings.position }} position-mobile--{{ block.settings.position_mobile }}">
    <div class="content-group width--medium text-align--{{ block.settings.text_alignment }} text-align-mobile--{{ block.settings.alignment_mobile }}">
      {% content_for 'blocks' %}
    </div>
  </div>
</li>
