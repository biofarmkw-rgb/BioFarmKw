<li
  id="Slide-{{ section.id }}-{{ block.id }}"
  class="shopify-block promise-item-block slider-slide grid-item focus-inset hover-trigger"
  tabindex="0"
  {{ block.shopify_attributes }}
>
  {%- if block.settings.image != blank -%}
    {{ block.settings.image | image_url: width: 300 | image_tag: class: 'animate--bounce' }}
  {%- elsif block.settings.icon != 'none' -%}
    {% render 'icon-sets', icon: block.settings.icon, class: 'animate--bounce' -%}
  {%- endif -%}
  <div class="content-group group--compact">
    {%- if block.settings.heading != blank -%}
      <h3 class="h5">{{ block.settings.heading | escape }}</h3>
    {%- endif -%}
    {%- if block.settings.description != blank -%}
      <div class="rte light">{{ block.settings.description }}</div>
    {%- endif -%}
  </div>
</li>

