<div class="icon-text-inner">
  {%- if block.settings.image != blank -%}
    <span class="media media--square">
      {{ block.settings.image | image_url: width: 300 | image_tag }}
    </span>
  {%- elsif block.settings.icon != 'none' -%}
    {% render 'icon-sets', icon: block.settings.icon -%}
  {%- endif -%}
  {%- if block.settings.text != blank -%}
    <a
      class="link{% if block.settings.link != blank %} link-text{% endif %}"
      {% if block.settings.link != blank %}
        href="{{ block.settings.link }}"
        {% if block.settings.open_in_new_tab %}
          target="_blank"
          rel="noopener nofollow"
        {% endif %}
      {% else %}
        role="link"
        aria-disabled="true"
      {% endif %}
    >
      {{- block.settings.text -}}
    </a>
  {%- endif -%}
</div>
